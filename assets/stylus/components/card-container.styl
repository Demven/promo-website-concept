/** CARD CONTAINER COMPONENT
  * @author Dmitry Salnikov
  * @since 3/30/2015
 */
@require './base/util'
@require './base/devices'

$card-container-card-width = 40em
$card-container-hide-margin-top = 5em
$card-container-show-margin-top = 0
$card-container-card-margin = 1.6em

ir-card-container
  height: 100%
  width:100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  font-size: 1rem
  padding: 4em
  margin-top: $card-container-hide-margin-top
  opacity: 0
  transition: opacity 1s, margin-top 0.6s
  box-sizing: border-box
  &.show
    opacity: 1
    margin-top: $card-container-show-margin-top
  card
    margin: $card-container-card-margin
    width: $card-container-card-width
    min-width: $card-container-card-width
    opacity: 0
    transition: opacity 1s
    &.image
      height: 46em
      background: #c3c3c3
    &.video
      height: 35em
      background: #D7AD86
    &.audio
      height: 18em
      background: $color-base
    &.show
      opacity: 1


/* TABLET STYLES */
@media $tablet-any
  ir-card-container
    font-size: 1rem
    padding: 2em

/* MOBILE STYLES */
@media $mobile
  ir-card-container
    font-size: 0.8rem
    padding: 1em

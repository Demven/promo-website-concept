/** CARD CONTAINER COMPONENT
  * @author Dmitry Salnikov
  * @since 3/30/2015
 */
@require './base/util'
@require './base/devices'

$card-container-card-width = 40em

ir-card-container
  height: 100%
  width:100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  font-size: 1rem
  padding: 4em
  box-sizing: border-box
  card
    margin: 1.6em
    width: $card-container-card-width
    min-width: $card-container-card-width
    &.image
      height: 46em
      background: #c3c3c3
    &.video
      height: 35em
      background: #D7AD86
    &.audio
      height: 18em
      background: $color-base

/* TABLET STYLES */
@media $tablet-any
  ir-card-container
    font-size: 1rem
    padding: 2em

/* MOBILE STYLES */
@media $mobile
  ir-card-container
    font-size: 0.8rem
    padding: 1em

  * @author Dmitry Salnikov
  * @since 3/30/2015
 */
@require './base/util'
@require './base/devices'

$card-container-card-width = 40em

ir-card-container
  height: 100%
  width:100%
  display: flex
  flex-wrap: wrap
  justify-content: center
  font-size: 1rem
  padding: 8em
  box-sizing: border-box
  card
    margin: 1.6em
    &.image
      height: 46em
      width: $card-container-card-width
      background: #c3c3c3
    &.video
      height: 35em
      width: $card-container-card-width
      background: #D7AD86
    &.audio
      height: 18em
      width: $card-container-card-width
      background: $color-base

/** FOOTER COMPONENT
  * @author Dmitry Salnikov
  * @since 11/26/2015
 */
@require './base/util'
@require './base/devices'

$footer-base-font-size = 1rem // Desktop

$footer-height = 24em

$social-media-after()
  content: ''
  display: block
  width: 0.8em
  height: 0.8em
  position: absolute
  left: 0.3em
  top: 0.35em

footer
  width: 100vw
  height: $footer-height
  display: flex
  background: $color-base
  flex-direction: column
  align-items: center
  flex-wrap: nowrap
  font-size: $footer-base-font-size
  font-family: $font-pt-sans-regular
  opacity: 0
  transition: opacity 1s 0.4s
  &.normal
    opacity: 1
  .social-container
    height: 7em
    width: 60em
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    color: #fff
    .social-media
      font-size: 2.8em
      position: relative
      box-sizing: border-box
      padding: 0.3em
      padding-left: 1.4em
      cursor: pointer
      &:hover
        padding-bottom: 0.2286em
        border-bottom: 2px dotted #fff
      &:after
        $social-media-after()

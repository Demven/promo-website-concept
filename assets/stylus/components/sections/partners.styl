@require './base/util'
@require './base/devices'

$section-partners-base-font-size = 1rem // Desktop

$section-partners-width = 102.4em
$section-partners-height = 14em

dar-section-partners
  width: $section-partners-width
  display: flex
  flex-direction: column
  margin: 0 auto
  padding-bottom: 5em
  font-size: $section-partners-base-font-size
  .partner-list
    width: 100%
    height: $section-partners-height
    display: flex
    flex-direction: row
    flex-wrap: wrap
    justify-content: space-between
    align-items: center
    position: relative
    .partner
      filter: grayscale(100%)
      transition: filter .4s, -webkit-filter .4s
      cursor: pointer
      &:hover
        filter: none

/* MOBILE STYLES */
@media $mobile
  dar-section-partners
    width: 100vw


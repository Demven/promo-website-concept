@require './base/util'
@require './base/devices'

$header-base-font-size = 1rem // Desktop

$header-height = 8.7em

header
  width: 100vw
  height: $header-height
  display: flex
  position: fixed
  top: 0
  left: 0
  font-family: "Bebas-Regular"
  font-size: $header-base-font-size
  align-items: center
  flex-wrap: nowrap
  justify-content: center
  z-index: 100
  ul
    width: 80%
    height: 100%
    display: flex
    justify-content: center
    align-items: center
    font-size: 3.4em
    text-transform: uppercase
    background-color: #fff
    color: #232323
    li
      margin: 0 0.5em


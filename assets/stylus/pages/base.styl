@require './base/util'
@require './components/header'

/** BASE PAGE (parent for all pages)
  * @author Dmitry Salnikov
  * @since 4/14/2015
 */
// ANIMATIONS
.page-content
  transition: transform $drawer-open-anim-dur
  &.slide-right
    transform: translateX($header-height)
  &.slide-left
    transform: translateX(-($header-height))

/* MOBILE STYLES */
@media $mobile
  .page-content
    &.slide-right
      margin-left: 0
      transform: translateX($drawer-mobile-width)
    &.slide-left
      margin-right: 0
      transform: translateX(-($drawer-mobile-width))

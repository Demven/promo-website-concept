@require "base/*"
@require "components/*"
@require "components/sections/*"

@-webkit-viewport{width:device-width}
@-moz-viewport{width:device-width}
@-ms-viewport{width:device-width}
@-o-viewport{width:device-width}
@viewport{width:device-width}

html
  font-size: 10px
  body
    overflow-x: hidden
    b
      font-weight: bold

*::selection
  color: #fff;
  background: $color-base;

/* vars */
$terrain-height = 16vh
$terrain-involve-height = 45vh

$anim-long-dur = 1.8s
$anim-middle-dur = 0.8s
$anim-short-dur = 0.4s

main
  width: 100vw
  background: #fff
  font-family: $font-base

@media $mobile
  #stay-with-us.involve
    #logo-group
      margin-top: 13% !important
